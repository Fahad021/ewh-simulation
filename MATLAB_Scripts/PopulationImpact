% xl = [.15 .15];
% yl = [.625 .85];
% annotation('line',xl,yl)
% xa = [0.2 .44];
% ya = [.62 .62];
% annotation('textarrow',xa,ya,'String','375 MW')
saveas(gcf,'PopulationImpact','epsc');